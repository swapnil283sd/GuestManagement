<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.swapnil.myapplication.GuestDetails">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edittextround"
        android:padding="6dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <EditText
            android:id="@+id/firstnameedittxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="First Name"
            android:layout_margin="10dp"
            android:background="@drawable/edittextsharp"
            android:textSize="25sp"
            android:inputType="text"
             />

        <EditText
            android:id="@+id/lastnameedittxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Last Name"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/edittextsharp"
            android:textSize="25sp"
            android:inputType="text"
            />

        <TextView
            android:id="@+id/balancerewardsTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primarycolor"
            android:background="@drawable/edittextsharp"
            android:layout_margin="10dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/edittextsharp"
            android:weightSum="8"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/staticText1"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primarycolor"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date Of Birth :-" />

            <EditText
                android:id="@+id/dobedittxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:maxLength="2"
                android:layout_margin="2dp"
                android:background="@drawable/edittextsharp"
                android:textColor="@color/primarycolor"
                android:inputType="number"
                android:layout_weight="3"
                 />

            <EditText
                android:id="@+id/mobedittxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:padding="3dp"
                android:maxLength="2"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:inputType="number"
                android:background="@drawable/edittextsharp"
                android:textColor="@color/primarycolor"
                android:layout_weight="3"
                android:gravity="center"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/edittextsharp"
            android:weightSum="8"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/staticText2"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primarycolor"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Date Of Anniversary :-" />

            <EditText
                android:id="@+id/doaeditTxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:background="@drawable/edittextsharp"
                android:textColor="@color/primarycolor"

                android:layout_weight="3"
                />

            <EditText
                android:id="@+id/moaeditTxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:padding="3dp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:background="@drawable/edittextsharp"
                android:textColor="@color/primarycolor"
                android:layout_weight="3"
                android:gravity="center"
                />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@drawable/edittextsharp"
            android:gravity="center" >


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Male"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Female"
                />

        </RadioGroup>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:text="Credit Reward Points" />

    </LinearLayout>




</RelativeLayout>
